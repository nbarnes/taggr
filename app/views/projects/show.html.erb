<p id="notice"><%= notice %></p>

<%= link_to 'Return to Index', projects_path %></br></br>

<div class='project'>
  <%= simple_format @project.title, { class: 'title' }, { wrapper_tag: 'div' } %>
  <%= simple_format @project.description %>
  <b>Owner:</b>
  <%= @project.owner.email %>
  </br>
  </br>
  <b>Members:</b></br>
  <div class='indent'>
  <% @project.users.each do |user| %>
    <%= user.email %>
    </br>
  <% end %>
  </div>
  </br>
  <b>Entries:</b></br>
  <div class='indent'>
    <% @project.entries.each do |entry| %>
      <%= link_to entry.title, entry %></br>
    <% end %>
    </br>
  </div>
  <%= link_to 'Edit Project', edit_project_path(@project) %>
</div>
